<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="io.github.movax10.calorizer.model">
       <class name="User" table="users">
              <id name="id" column="id" type="java.lang.Integer">
                     <generator class="native"/>
              </id>
              <property name="email" column="email" type="string" not-null="true" length="200"/>
              <property name="password" column="password" type="string" not-null="true" length="50"/>
       </class>
</hibernate-mapping>