<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="io.github.movax10.calorizer.model">
       <class name="Ingredient" table="ingredients">
              <id name="id" column="id" type="integer">
                     <generator class="native"/>
              </id>
              <property name="name" column="name" type="string"/>
              <property name="calories" column="calories" type="float"/>
              <property name="carbs" column="carbs" type="float"/>
              <property name="fats" column="fats" type="float"/>
              <property name="proteins" column="proteins" type="float"/>
       </class>
</hibernate-mapping>